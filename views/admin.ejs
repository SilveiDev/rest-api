<body>

  <div id="main-wrapper">

    <%- include('./layout/navbar.ejs') %>
    <%- include('./layout/sidebar.ejs') %>
    
    <div class="content-body default-height ">
      <div class="container-fluid">
        <div class="row">
          <%- include('./layout/alert.ejs') %>
          
          <!-- Select Options -->
          <div class="col-xl-6 col-lg-6">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title">List Admin Page</h4>
              </div>
              <div class="card-body">
                <div class="basic-form">
                  <form>
                    <div class="form-group mb-4">
                      <select id="actionSelect" class="form-control default-select form-control-sm">
                        <option selected>Select Here</option>
                        <option value="addPrem">Add Premium</option>
                        <option value="delPrem">Delete Premium</option>
                        <option value="listPrem">List Premium</option>
                      </select>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!-- Add Premium Form -->
          <div class="col-lg-4">
            <div class="card" id="addprem" style="display: block;">
              <a href="#" class="btn btn-transparent position-absolute start-0 top-0 mt-3 ms-3" onclick="showCard('homeadmin')">
                <i class="fas fa-arrow-left"></i>
              </a>
              <div class="card-body">
                <h5 class="text-center mb-3">ADD PREMIUM</h5>
                <form action="/admin/premium/add" method="POST">
                  <div class="form-group text-center">
                    <label for="username" class="form-label text-white">USER NAME</label>
                    <input type="text" name="username" class="form-control" id="username" required placeholder="Masukkan User Name">
                  </div>
                  <div class="form-group text-center">
                    <label for="days" class="form-label text-white">Number of days</label>
                    <input type="text" name="days" class="form-control" id="days" required placeholder="Masukkan Jumlah Hari">
                  </div>
                  <div class="form-group text-center">
                    <label for="token" class="form-label text-white">Token</label>
                    <input type="text" name="token" class="form-control" id="token" required placeholder="Masukkan Token">
                  </div>
                  <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline-secondary text-uppercase btn-block mx-auto">Submit</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- End Add Premium Form -->
          <!-- Delete Premium Form -->
          <div class="col-lg-4">
            <div class="card" id="delprem" style="display: block;">
              <a href="#" class="btn btn-transparent position-absolute start-0 top-0 mt-3 ms-3" onclick="showCard('homeadmin')">
                <i class="fas fa-arrow-left"></i>
              </a>
              <div class="card-body">
                <h5 class="text-center mb-3">DELETE PREMIUM</h5>
                <form action="/admin/premium/delete" method="POST">
                  <div class="form-group text-center">
                    <label for="username" class="form-label text-white">USER NAME</label>
                    <input type="text" name="username" class="form-control" id="username" required placeholder="Masukkan User Name">
                  </div>
                  <div class="form-group text-center">
                    <label for="token" class="form-label text-white">Token</label>
                    <input type="text" name="token" class="form-control" id="token" required placeholder="Masukkan Token">
                  </div>
                  <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline-secondary text-uppercase btn-block mx-auto">Submit</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- End Delete Premium Form -->

        </div>
      </div>
    </div>
    <footer class="footer">
      <div class="copyright">
        <p>Copyright Â© Designed &amp; Developed by <a href="http://github.com/ArifzynXD" target="_blank">Arifzyn
            API</a> 2023
        </p>
      </div>
    </footer>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script src="vendor/global/global.min.js"></script>
  <script src="vendor/bootstrap-select/js/bootstrap-select.min.js"></script>
  <script src="vendor/chart-js/chart.bundle.min.js"></script>
  <script src="vendor/owl-carousel/owl.carousel.js"></script>
  <script src="vendor/peity/jquery.peity.min.js"></script>
  <script src="vendor/apexchart/apexchart.js"></script>
  <script src="js/dashboard/dashboard-1.js"></script>
  <script src="js/custom.min.js"></script>
  <script src="js/deznav-init.js"></script>
  <script src="js/dashboard.js"></script>
  <script>
    const selectElement = document.getElementById('actionSelect');
  
    // Function to show/hide the corresponding sections
    function toggleSections() {
      const addPremSection = document.getElementById('addprem');
      const delPremSection = document.getElementById('delprem');
  
      // Reset display property for all sections
      addPremSection.style.display = 'none';
      delPremSection.style.display = 'none';
  
      // Show the selected section
      if (selectElement.value === 'addPrem') {
        addPremSection.style.display = 'block';
      } else if (selectElement.value === 'delPrem') {
        delPremSection.style.display = 'block';
      }
    }
  
    // Add an event listener to trigger the function when the select value changes
    selectElement.addEventListener('change', toggleSections);
  
    // Call the function initially to set the initial state
    toggleSections();
  </script>
</body>

</html>